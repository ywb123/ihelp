<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/acti3"
        android:layout_marginRight="15dp"
        android:layout_marginTop="47dp"
        android:layout_toLeftOf="@+id/acti3"
        android:text="校医院"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/acti2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/acti1"
        android:src="@drawable/waimai" />

    <ImageView
        android:id="@+id/acti3"
        android:layout_width="166dp"
        android:layout_height="123dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/acti2"
        android:layout_marginRight="20dp"
        android:src="@drawable/xiaoyiyuan" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/acti2"
        android:layout_marginBottom="61dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/acti2"
        android:text="带外卖"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/acti1"
        android:layout_width="200dp"
        android:layout_height="152dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/kuaidi" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/acti1"
        android:layout_marginTop="36dp"
        android:layout_toLeftOf="@+id/acti1"
        android:text="取快递"
        android:textSize="20sp" />

</RelativeLayout>
