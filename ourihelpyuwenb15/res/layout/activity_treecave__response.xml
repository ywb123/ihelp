<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#5A436E"
            android:gravity="center"
            android:text="我要评论"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />
        <ImageView
            android:id="@+id/Yes"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/publish"
            android:onClick="sure" />
        <Button
            android:id="@+id/flash"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/refresh"
            android:onClick="flash" />

    </RelativeLayout>

    <TextView 
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:background="#FFFACD"
        android:textColor="#6600FF"
        />
    <EditText
        android:id="@+id/myresponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="#FFFACD"
        android:hint="点击添加评论" />

    <ListView
        android:id="@+id/LV_Response"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:dividerHeight="5dp"
        android:layout_weight="1.32" >
    </ListView>

</LinearLayout>